{
    "compilerOptions": {
        "target": "es2017",
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@models/*": ["src/models/*"],
            "@routes/*": ["src/routes/*"],
            "@controllers/*": ["src/controllers/*"],
            "@views/*": ["src/views/*"],
            "@fixtures": ["src/__test__/fixtures/index"]
        }
    },
    "exclude": ["build", ".hmr"]
}