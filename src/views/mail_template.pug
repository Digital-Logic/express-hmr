doctype html
html(xmlns="http://www.w3.org/1999/xhtml")
    head
        block title
            title My Super Cool Website
        meta(http-equiv="Content-type" content="text/html; charset=utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet")

    -
        var textStyles = {
            "font-size": "16px",
            "line-height": "20px",
            "padding": "10px 10px 10px 10px",
            "color": "#666666",
            "font-family": "Roboto, sans-serif"
        }
    -
        var linkStyles = {
            "font-size": "16px",
            "line-height": "20px",
            "padding": "10px 10px 10px 10px",
            "color": "#666666",
            "font-family": "Roboto, sans-serif",
            "text-decoration": "none"
        }

    body(style={
        "margin": 0,
        "padding": '30px 10px 30px 10px',
        "background-color": "#eeeeee"
    })
        table(align="center" cellpadding="0" cellspacing="0" width="600"
            style={
                "border-collapse": "collapse",
                "background-color": "#ffffff",
                "border": "1px solid #cccccc"
            })
            tr
                td(align="center" style="padding: 10px 0 10px 0;")
                    h1 My Super Cool Website!
                    //- img(src="Header image address"
                        alt="My Super Cool Website!" width="400" height="76" style="display: block") //
            tr

            tr(style=textStyles)
                td
                    // Main Content
                    block mainContent


                    tr
                        td(height="20")


                    block closing
                            tr
                                td
                                    span(style=textStyles) Sincerely,
                            tr
                                td
                                    span(style=textStyles) The Staff
                            tr
                                td
                                    a(href="My-Super-Cool-Website.net" style=linkStyles) My-Super-Cool-Website
                            tr
                                td
                                    a(href="mailto:contact@My-Super-Cool-Website.net" style=linkStyles) contact@My-Super-Cool-Website.net

            tr
                td(height="20")
            tr
                td(bgcolor="#444444" style="padding: 5px 10px 5px 10px")
                    table( border="0" cellpadding="0" cellspacing="0" width="600")
                        tr
                            td(style="color: #ffffff; padding: 5px 10px 5px 10px; font-size: 12px; font-family: Roboto, sans-serif;") Copyright &copy; #{ new Date().getFullYear() }
                            td(align="right" style="color: #ffffff; padding: 5px 10px 5px 10px; font-size: 12px; font-family: Roboto, sans-serif;")
                                a(href="My-Super-Cool-Website.net" style="color: #ffffff; font-size: 12px; text-decoration: none")
                                    font(color="#ffffff" face="Roboto, sans-serif;") My-Super-Cool-Website.net


